  <!-- Logo/Brand area -->
  <rect x="120" y="160" width="60" height="60" rx="12" fill="url(#accentGradient)"/>
  <text x="150" y="200" text-anchor="middle" fill="white" font-family="system-ui, -apple-system, sans-serif" font-size="24" font-weight="bold">C</text>
  
  <!-- Main title -->
  <text x="220" y="200" fill="white" font-family="system-ui, -apple-system, sans-serif" font-size="48" font-weight="bold">Capit Design System</text>
  
  <!-- Subtitle -->
  <text x="120" y="260" fill="#94a3b8" font-family="system-ui, -apple-system, sans-serif" font-size="24" font-weight="400">Sistema de Design Moderno e Componentes Reutiliz√°veis</text>
  
  <!-- Feature highlights -->
  <g transform="translate(120, 320)">
