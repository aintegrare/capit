    <rect x="0" y="0" width="120" height="40" rx="20" fill="rgba(97, 218, 251, 0.1)" stroke="#61dafb" stroke-width="1"/>
    <text x="60" y="25" text-anchor="middle" fill="#61dafb" font-family="system-ui, -apple-system, sans-serif" font-size="14" font-weight="500">React</text>
    
    <!-- TypeScript -->
    <rect x="140" y="0" width="120" height="40" rx="20" fill="rgba(49, 120, 198, 0.1)" stroke="#3178c6" stroke-width="1"/>
    <text x="200" y="25" text-anchor="middle" fill="#3178c6" font-family="system-ui, -apple-system, sans-serif" font-size="14" font-weight="500">TypeScript</text>
    
    <!-- Tailwind -->
    <rect x="280" y="0" width="120" height="40" rx="20" fill="rgba(6, 182, 212, 0.1)" stroke="#06b6d4" stroke-width="1"/>
    <text x="340" y="25" text-anchor="middle" fill="#06b6d4" font-family="system-ui, -apple-system, sans-serif" font-size="14" font-weight="500">Tailwind</text>
    
    <!-- Next.js -->
    <rect x="420" y="0" width="120" height="40" rx="20" fill="rgba(255, 255, 255, 0.1)" stroke="#ffffff" stroke-width="1"/>
    <text x="480" y="25" text-anchor="middle" fill="#ffffff" font-family="system-ui, -apple-system, sans-serif" font-size="14" font-weight="500">Next.js</text>
  </g>
  
  <!-- Bottom accent line -->
  <rect x="120" y="480" width="960" height="2" fill="url(#accentGradient)"/>
  
  <!-- URL -->
  <text x="600" y="560" text-anchor="middle" fill="#64748b" font-family="system-ui, -apple-system, sans-serif" font-size="18" font-weight="400">capit-design-system.netlify.app</text>
